{
	"compilerOptions": {
		"outDir": "./lib",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "es5",
		"baseUrl": "./",
		"paths": {
			"@tps/*": ["./src/*"],
			"@test/*": ["./__tests__/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"include": [
		"./src/**/*",
	],
	"exclude": ["node_modules"],
}
