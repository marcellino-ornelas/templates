{
	"compilerOptions": {
		"outDir": "./lib",
		"allowJs": true,
		"declaration": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es5",
		"baseUrl": ".",
		"paths": {
			"@tps/*": ["./src/*"],
			"@test/*": ["./__tests__/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"include": [
		"./src/**/*",
	],
	"exclude": ["node_modules"],

	"ts-node": {
		"include": [
			"./src/**/*",
			"./.bin/**/*"
		]
	}
}
